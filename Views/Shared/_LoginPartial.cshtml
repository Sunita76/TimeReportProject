@using Microsoft.AspNetCore.Identity
@using TimeReportProject.Areas.Identity.Data
@inject SignInManager<TimeReportProjectUser> SignInManager
@inject UserManager<TimeReportProjectUser> UserManager

<ul class="nav navbar-nav navbar-right" >
@if (SignInManager.IsSignedIn(User))
{
    <li >
       <a href="#" title="Manage">Hello @User.Identity?.Name!</a>
    
    </li>
    <li >
        @*<a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>*@
        <form  class="form-inline" style="padding-top:9px" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
           <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            
        </form>
    </li>
}
else
{
    <li >
        <a  asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li >
        <a  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
